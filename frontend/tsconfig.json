{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "es2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "webpack.*.js",
    "*.config.js",
    "*.test.ts*"
  ]
}
